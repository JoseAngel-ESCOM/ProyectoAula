@model IEnumerable<ProyectoAula.Models.DetalleCompra>

@{
    ViewData["Title"] = "Index";
}

@section Styles{
    <link href="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <style>
        table.dataTable thead{
           background-image: linear-gradient(to right, #ffb347 0%, #ffcc33  51%, #ffb347  100%);
            color:white;
        }
    </style>
}

<div class="container-fluid">

<div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800 comp">Compra</h1>
        <a asp-action="Create" class="d-sm-inline-block btn btn-sm btn-comp shadow-sm"><i class="far fa-plus-square"></i></a>
    </div>

       <div class="card shadow mb-4">
         <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Lista de compras</h6>
         </div>
         
         <div class="card-body">
            <div class="table-responsive">                 
                <table class="table table-bordered" id="example" width="100%" cellspacing="0">
                      <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaCompra)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PrecioCompra)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cantidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Total)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Proveedores)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Productos)
                            </th>
                            <th></th>
                        </tr>
                      </thead>
                         <tbody>
                            @foreach (var item in Model) {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaCompra)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PrecioCompra)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cantidad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Total)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Proveedores.RazonSocial)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Productos.Producto_Nombre)
                                        </td>
                                        <td>
                                            <a style="color: #dd4b39;" asp-action="Delete" asp-route-id="@item.DetalleCompra_ID"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                    </tr>
                            }
                        </tbody>
                 </table>
             </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/datatables.net/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function() {
          $('#example').DataTable({
            "language": {
              "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
            }
          });
        });
    </script>
}


