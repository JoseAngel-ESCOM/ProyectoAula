@model IEnumerable<ProyectoAula.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

@section Styles{
    <link href="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.css" rel="stylesheet" />
     <style>
        table.dataTable thead{
            background-image: linear-gradient(to right, #9D50BB 0%, #6E48AA 51%, #9D50BB 100%);
            color:white;
        }
    </style>
}


<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800 user">Usuarios</h1>
        <a asp-action="Create" class="d-sm-inline-block btn btn-sm btn-user shadow-sm"><i class="far fa-plus-square"></i></a>
    </div>

       <div class="card shadow mb-4">
         <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Lista de usuarios</h6>
         </div>
         
         <div class="card-body">
            <div class="table-responsive">                 
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Correo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Roles)
                        </th>
                        <th></th>
                        </tr>
                    </thead>
                    <tbody>
                                    @foreach (var item in Model) {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Nombre)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Correo)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Roles)
                                                </td>
                                                <td>
                                                    <a style="color: #ffac44;" asp-action="Edit" asp-route-id="@item.Usuario_ID"><i class="fas fa-edit"></i></a> |
                                                    <a style="color: #0082ca;" asp-action="Details" asp-route-id="@item.Usuario_ID"><i class="fas fa-info-circle"></i></a> |
                                                    <a style="color: #dd4b39;" asp-action="Delete" asp-route-id="@item.Usuario_ID"><i class="fas fa-trash-alt"></i></a>
                                                </td>
                                            </tr>
                                    }
                    </tbody>
                 </table>
             </div>
        </div>
    </div>
    </div>
  

@section Scripts{
    <script src="~/lib/datatables.net/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function() {
          $('#dataTable').DataTable({
            "language": {
              "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
            }
          });
        });
    </script>
}
